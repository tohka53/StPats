<table class="table">
    <tr>
        <th>
            Name Location
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = item.id_location })'">
                    <span class="glyphicon glyphicon-edit"></span>&nbsp;Edit
                </button>
                <button class="btn btn-info btn-sm" onclick="location.href = '@Url.Action("Details", new { id = item.id_location })'">
                    <span class="glyphicon glyphicon-list-alt"></span>&nbsp; Details
                </button>
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = item.id_location })'">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;Delete
                </button>
            </td>
        </tr>
    }

</table>
