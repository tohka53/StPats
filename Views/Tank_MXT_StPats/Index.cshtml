@model IEnumerable<StPats.Models.Tank_MXT_StPats>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<p>

</p>
<div class="row">
    <div class="col-md-6">
        <div class="jumbotron jumbotron-fluid">

            <div class="text-center"><strong>LETINA Mixing Tanks</strong></div>
            <br />
            <strong>These are flat bottom tanks that are sloped from back to front (5%) to make cleanout easier.</strong><br />
            <br />
            •  Conical Dish bottom for total drainage <br />
            •   All welds are polished and treated (not porous) for sanitary food use. Beautiful and seamless manway/tank welds. <br />
            •  304 Stainless Steel. 2R (aka BA—bright annealed, aka mirror) finish on inside. Marble Finish on outside. <br />
            •  TriClamp butterfly valve <br />
            •   tanks ride on 3 wheels (1 swivel with brake)
            •  Top is hinged in middle. Folds back for easy loading <br />
            •   230V, geared motor. Single phase for M1000/2000. 3-phase on M4000. <br />
            •  mixer--55 rpm <br />
            •  Scatter plate prevents whirlpooling (better mixing) <br />




        </div>
    </div>
    <div class="col-md-2">
        <div class="jumbotron jumbotron-fluid text-center">

            <img src="~/images/Mixingtank2.jpg" width="100%" /> <br />
        </div>
    </div>
    <div class="col-md-4">
        <div class="jumbotron jumbotron-fluid text-center">

            <img src="~/images/Mtank.jpg" width="40%" />
        </div>
    </div>
</div>

<div>
    <h2>LETINA Mixing Tanks</h2>

    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                    <font size=1> Code Produt</font>
                </th>
                <th>
                    <font size=1>Price</font>
                </th>

                <th>
                    <font size=1>Capacity</font>
                </th>
                <th>
                    <font size=1>Botton Valve</font>
                </th>
                <th>

                    <font size=1>Wheels</font>
                </th>
                <th>
                    <font size=1>Motors</font>
                </th>
                <th>
                    <font size=1>Wall Thickness Bottom Thickness</font>
                </th>


                <th>
                    <font size=1> Location</font>
                </th>
                <th>
                    <font size=1> Actions</font>
                </th>


            </tr>
        </thead>
        <tbody id="myTable">


            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.code_produt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.botton_valve)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.wheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.motor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.wall_thickness_bottom_thickness)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Locations_StPats.description)
                </td>

                <td>
                    <button class="btn btn-info btn-sm" onclick="location.href = '@Url.Action("Details","Tank_MXT_StPats", new { id = item.id_filter_acf })'">
                        <span class=" glyphicon glyphicon-th-list"></span>&nbsp;  Details
                    </button>
                    <p></p>
                    <button class="btn btn-success btn-sm" onclick="location.href = '@Url.Action("Create","Lista_Productos_StPats", new { id = item.id_producto_general, precio =item.price })'">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
                    </button>
                </td>

            </tr>
            }

        </tbody>
    </table>
</div>


<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
